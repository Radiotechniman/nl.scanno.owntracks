{
   "id": "nl.scanno.owntracks",
   "name": {
      "en": "Owntracks MQTT client",
      "nl": "Owntracks MQTT client"
   },
   "description": {
      "en": "Subscripe to Owntracks MQTT message for presence detection",
      "nl": "Abonneer op MQTT berichten van Owntracks voor aanwezigheids detectie"
   },
   "version": "0.1.0",
   "compatibility": "0.x",
   "category": [
      "internet"
   ],
   "author": {
      "name": "Menno van Grinsven",
      "email": "mgrinsven@gmail.com"
   },
   "images":{
     "large":"./assets/images/large.jpg",
     "small":"./assets/images/small.jpg"
   },
   "flow": {
      "triggers": [
         {
            "id": "eventOwntracks",
            "title": {
               "en": "Receive Geofence triggers",
               "nl": "Ontvang Geofence triggers"
            },
            "tokens": [
               {
                  "name": "eventType",
                  "title": {
                     "en": "Type of event (enter or leave)",
                     "nl": "Type gebeurtenis (enter / leave)"
                  }
               }
            ],
            "args":[
	       {
	          "name": "mqttTopic",
	          "type": "text",
	          "placeholder": {
	             "en": "Topic",
	             "nl": "Topic"
	           }
	       },
	       {
	           "name": "nameGeofence",
	           "type": "text",
	           "placeholder": {
	              "en": "Geofence name",
	              "nl": "Naam Geofence"
	           }
	       }
            ]
         },
         {
            "id": "enterGeofence",
            "title": {
               "en": "Enter Geofence trigger",
               "nl": "Geofence binnen gegaan trigger"
            },
            "args":[
	       {
	          "name": "mqttTopic",
	          "type": "text",
	          "placeholder": {
	             "en": "Topic",
	             "nl": "Topic"
	           }
	       },
	       {
	           "name": "nameGeofence",
	           "type": "text",
	           "placeholder": {
	              "en": "Geofence name",
	              "nl": "Naam Geofence"
	           }
	       }
            ]
         },
         {
            "id": "leaveGeofence",
            "title": {
               "en": "Leave Geofence trigger",
               "nl": "Geofence verlaten trigger"
            },
            "args":[
	       {
	          "name": "mqttTopic",
	          "type": "text",
	          "placeholder": {
	             "en": "Topic",
	             "nl": "Topic"
	           }
	       },
	       {
	           "name": "nameGeofence",
	           "type": "text",
	           "placeholder": {
	              "en": "Geofence name",
	              "nl": "Naam Geofence"
	           }
	       }
            ]
         }

      ],
      "actions": [
         {
	    "id": "pub_mqtt_message",
	    "title": {
	       "en": "Publish message",
	       "nl": "Stuur bericht"
	     },
             "args":[
	        {
	           "name": "mqtt_message",
	           "type": "text",
	           "placeholder": {
	              "en": "Message",
	              "nl": "Bericht"
	            }
	        },
	        {
	           "name": "mqtt_topic",
	           "type": "text",
	           "placeholder": {
	              "en": "Topic",
	              "nl": "Topic"
	           }
	        }
             ]
	  }
      ]
   }
}
