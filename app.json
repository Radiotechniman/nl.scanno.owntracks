      "actions": [
         {
            "id": "sayLocation",
            "title": {
               "en": "Tell the current location of a user",
               "nl": "Vertel de huidige locatie van een gebruiker"
             },
             "args":[
                {
                   "name": "user",
                   "type": "autocomplete",
                   "placeholder": {
                      "en": "User",
                      "nl": "Gebruiker"
                   }
                }
             ]
         },
         {
            "id": "publishOwntracks",
            "title": {
               "en": "Publish message",
               "nl": "Stuur bericht"
             },
             "args":[
                {
                   "name": "mqttMessage",
                   "type": "text",
                   "placeholder": {
