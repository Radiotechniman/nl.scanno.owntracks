{
   "id": "nl.scanno.homey-mqtt",
   "name": {
      "en": "Homey MQTT Client",
      "nl": "Homey MQTT Client"
   },
   "description": {
      "en": "Subscripe to MQTT messages.",
      "nl": "Abonneer op MQTT berichten."
   },
   "version": "0.4.0",
   "compatibility": "1.x",
   "category": [
      "internet"
   ],
   "author": {
      "name": "Menno van Grinsven",
      "email": "mgrinsven@gmail.com"
   },
    "contributors": {
        "developers": [
            {
                "name": "Menno van Grinsven",
                "email": "mgrinsven@gmail.com"
            },
            {
                "name": "Johan Kuster",
                "email": "j_kuster@hotmail.com"
            }
        ]
    },
   "images":{
     "large":"./assets/images/large.png",
     "small":"./assets/images/small.png"
   },
   "flow": {
      "triggers": [
         {
            "id": "eventDeviceData",
            "title": {
               "en": "Receive ownTracks device data",
               "nl": "Ontvang ownTracks device gegevens"
            },
            "tokens": [
               {
                  "name": "battery",
                  "title": {
                     "en": "Device battery percentage.",
                     "nl": "Accu percentage"
                  }
               },
               {
                  "name": "address",
                  "title": {
                     "en": "Adress of the device location",
                     "nl": "Adres waar het apparaat zich bevind"
                  }
               },
               {
                  "name": "lon",
                  "title": {
                     "en": "Longitude of device",
                     "nl": "Longitude van apparaat"
                  }
               },
               {
                  "name": "lat",
                  "title": {
                     "en": "Latitude of device",
                     "nl": "Latitude van apparaat"
                  }
               }

            ],
            "args":[
	       {
	          "name": "mqttTopic",
	          "type": "text",
	          "placeholder": {
	             "en": "Topic",
	             "nl": "Topic"
	           }
	       }
            ]
         },
         {
            "id": "eventOwntracks",
            "title": {
               "en": "Receive Geofence triggers",
               "nl": "Ontvang Geofence triggers"
            },
            "tokens": [
               {
                  "name": "event",
                  "title": {
                     "en": "Type of event (enter or leave)",
                     "nl": "Type gebeurtenis (enter / leave)"
                  }
               }
            ],
            "args":[
	       {
	          "name": "mqttTopic",
	          "type": "text",
	          "placeholder": {
	             "en": "Topic",
	             "nl": "Topic"
	           }
	       },
	       {
	           "name": "nameGeofence",
	           "type": "text",
	           "placeholder": {
	              "en": "Geofence name",
	              "nl": "Naam Geofence"
	           }
	       }
            ]
         },
         {
            "id": "enterGeofence",
            "title": {
               "en": "Enter Geofence trigger",
               "nl": "Geofence binnen gegaan trigger"
            },
            "args":[
	       {
	          "name": "mqttTopic",
	          "type": "text",
	          "placeholder": {
	             "en": "Topic",
	             "nl": "Topic"
	           }
	       },
	       {
	           "name": "nameGeofence",
	           "type": "text",
	           "placeholder": {
	              "en": "Geofence name",
	              "nl": "Naam Geofence"
	           }
	       }
            ]
         },
         {
            "id": "leaveGeofence",
            "title": {
               "en": "Leave Geofence trigger",
               "nl": "Geofence verlaten trigger"
            },
            "args":[
	       {
	          "name": "mqttTopic",
	          "type": "text",
	          "placeholder": {
	             "en": "Topic",
	             "nl": "Topic"
	           }
	       },
	       {
	           "name": "nameGeofence",
	           "type": "text",
	           "placeholder": {
	              "en": "Geofence name",
	              "nl": "Naam Geofence"
	           }
	       }
            ]
         }
      ],
      "actions": [
         {
	    "id": "pub_mqtt_message",
	    "title": {
	       "en": "Publish message",
	       "nl": "Stuur bericht"
	     },
             "args":[
	        {
	           "name": "mqtt_message",
	           "type": "text",
	           "placeholder": {
	              "en": "Message",
	              "nl": "Bericht"
	            }
	        },
	        {
	           "name": "mqtt_topic",
	           "type": "text",
	           "placeholder": {
	              "en": "Topic",
	              "nl": "Topic"
	           }
	        }
             ]
	  }
      ]
   }
}
